{
  "compilerOptions": {
    "jsxImportSource": "react",
    "target": "es6",
    "jsx": "react-jsx",
    "declaration": true,
    "sourceMap": true,
    "module":"NodeNext",
    "moduleResolution":"nodenext",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib":["dom"],
    "types": ["jest", "node"]
  },
  "include": ["./src/*"]
}
